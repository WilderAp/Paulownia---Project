{
	"name": "typescript-react-template",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"format": "biome format --write ./src",
		"lint-check": "biome lint ./src",
		"lint-apply": "biome check --apply ./src",
		"lint": "npm run format && npm run lint-check && npm run lint-apply",
		"prepare": "husky",
		"test": "echo \"Error: no test specified\""
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.2.1",
		"react-router-dom": "^6.23.1",
		"zustand": "^4.5.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@types/node": "^20.12.12",
		"@types/react": "^18.2.66",
		"@types/react-dom": "^18.2.22",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.12.10",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.5",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.2.2",
		"vite": "^5.2.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --apply --no-errors-on-unmatched",
			"biome check --files-ignore-unknown=true",
			"biome check --apply --no-errors-on-unmatched",
			"biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --apply-unsafe --no-errors-on-unmatched"
		]
	}
}
